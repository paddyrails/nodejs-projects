<!-- views Index.ejs -->
<!doctype html>
<html>
<head>
  <title>Node Aunthentication</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"></link>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"></link>
  <style>
    body { padding-top: 80px}
  </style>
</head>
<body>
  <div class="container" style="background-color: #5bc0de">
    <h1>Popsy Travels</h1>
  </div>
  <div  class="container">
    <div class="col-sm-6 col-sm=offset-3">
      <h1><span class="fa fa-sign-in"></span> Signup</h1>

      <!-- Show any message that came back with authentication -->
      <% if(message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <!-- Login Form -->
      <form action="/signup" method="post">
        <div class="form-group">
          <label>Email</label>
          <input type="text" class="form-control" name="email"></input>
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="text" class="form-control" name="password"></input>
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
      </form>
      <hr/>

      <p>Already have an account? <a href="/login">Login</a></p>
      <p>Or go <a href="/">Home</a></p>
    </div>
  </div>
</body>
</html>
